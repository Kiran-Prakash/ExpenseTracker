{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Database=ExpenseTracker;Trusted_Connection=True;MultipleActiveResultSets=True;"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Debug",
        "System": "Debug"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithThreadName", "WithEventType" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/expense-tracker-.log",
          "rollingInterval": "Day"
        }
      }
    ],
    "Properties": {
      "Application": "ExpenseTracker Web API"
    }
  },
  "AzureMonitor": {
    "ConnectionString": "InstrumentationKey=349b2d6b-0515-4282-a7cf-f1ce819c9271;IngestionEndpoint=https://southindia-0.in.applicationinsights.azure.com/;LiveEndpoint=https://southindia.livediagnostics.monitor.azure.com/;ApplicationId=c7bcc220-7085-402b-bdaf-446f54bff4f4"
  }

}
